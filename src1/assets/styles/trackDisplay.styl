.track-display
  position absolute
  bottom 0
  margin-bottom paddingTopBorder
  display flex

.track-artwork
  background-color containerBackground
  padding 1rem
  display inline-block

.track-info
  color white
  font-size 2rem
  margin-left 0.2rem

  div
    background-color containerBackground
    padding 0.5rem
    margin-bottom 0.2rem

  .track-user
    display inline-flex

  #progressbar-wrapper
      text-align center
      display flex

      #progressbar
        width 100%
        background-color transparent
        cursor pointer

      #time-progress
        line-height 10px
        font-size 12px
        background-color transparent !important

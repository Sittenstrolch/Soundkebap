@require 'variables'

@require "audioControls"
@require "trackDisplay"
@require "soundcloudAuthorizer"
@require "playlist"

body
  background-image: url("../img/background/waves.jpg")
  background-size cover
  padding paddingTopBorder paddingLeftBorder

.wrapper
  height 100%

.scroll
  overflow-y scroll

::-webkit-scrollbar
  width 12px

::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
  border-radius 10px

::-webkit-scrollbar-thumb
  border-radius 10px
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)